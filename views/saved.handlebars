<div class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Book Review</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                    <a href="/">Home</a>
                </li>
                <li class="active">
                    <a href="#">Saved Articles</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="bg">
    <div class="hero-text">
        <h1 style="font-size: 80px;">Saved Articles</h1>
        <p style="font-size: 30px; letter-spacing:2px;">New York Times Edition</p>
    </div>
</div>
<br>
<section>
    {{#if articles}} {{#each articles}}
    <div class="container">
        <div class="row">
            <br>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>
                        <a class="article-link" target="_blank" href={{this.link}}>{{this.title}}</a>
                        <a class="btn btn-danger delete" id="del-btn" data-id={{this._id}}>DELETE FROM SAVED</a>
                        <button class="btn btn-success note" id="notes-btn" data-id='{{this._id}}' data-toggle="modal" data-target="#myModal">ARTICLE NOTES</button>
                    </h4>
                </div>
                <div class="panel-body">
                    <img class="thumbnail" id="article-img" style="display:inline" src={{this.img}}>
                    <p class="caption" style="display:inline;padding-left:10px;">{{this.summary}}</p>
                </div>
            </div>

        </div>
    </div>
    <!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Notes for Article:</h4>
            </div>
            <div class="modal-body">
                <div id="note-lbl">
                    <label> {{articleWithNote.note._id}}</label>

                    <label>{{articleWithNote.note.title}}</label>
                    <hr>
                    <label>{{articleWithNote.note.body}}</label>
                    <button class="btn btn-danger" id ="note-del" data-id={{this._id}} style="float:right">&times;</button>
                </div>
                <br>
                <input placeholder="Title" id="note-title">
                <br>
                <textarea placeholder="New note" rows="8" cols="78" id="note-content"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="save-note" data-id={{this._id}}>Save Note</button>
            </div>
        </div>
    </div>
</div>
    {{/each}} {{/if}} {{#unless articles}}
    <div>
        <div class="well text-center">
            <h2>uh oh.. Looks like we don't have any saved articles</h2>
        </div>
    </div>
    {{/unless}}
</section>

